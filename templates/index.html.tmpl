<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Identicons</title>
    </head>
    <body>
        <div class="wrapper">
            <h1>Identicons</h1>
            <div id="icons"></div>
        </div>

        <script>
         const iconContainer = document.querySelector('#icons');
         for (let i = 0; i < 4; i++) {
             const r = Math.floor(Math.random() * Math.pow(36, 6)).toString(36).toUpperCase();
             const url = `/i/shield/v1/${r}.svg`;

             const link = document.createElement('a');
             link.setAttribute('href', url);
             const img = document.createElement('img');
             img.setAttribute('src', `/i/shield/v1/${r}.svg`);
             link.appendChild(img);
             iconContainer.appendChild(link);
         }
        </script>
    </body>
</html>
